	red: { a: 1, b: 0, g: 0, r: 1 },
	blue: { a: 1, b: 1, g:0, r:0},
	black: { a: 1, b: 0, g: 0, r: 0 },

    color_ghost: {a:1, r:0.35, g:0.35, b:0.35 },

