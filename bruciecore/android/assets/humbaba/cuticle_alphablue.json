      checkboxOffDisabled: checkbox_off_disabled,

    },

    radio: {
      font: button-font,
      fontColor: white,
      checkedFontColor: white,
      checkboxOff: checkbox_off,
      checkboxOn: checkbox_on,
      checkboxOnDisabled: checkbox_on_disabled,
      checkboxOffDisabled: checkbox_off_disabled,
    },

},

}