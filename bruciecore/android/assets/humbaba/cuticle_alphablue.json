	default: {
		hScroll: slidegutter_horz,
		hScrollKnob: knob_slider_horz,
		vScroll: slidegutter_vert,
		vScrollKnob: knob_slider_vert,
	},
	framed: {
	    hScroll: slidegutter_horz,
	    hScrollKnob: knob_slider_horz,
	    vScroll: slidegutter_vert,
	    vScrollKnob: knob_slider_vert,
	    background: frame_light,
	},
},

com.badlogic.gdx.scenes.scene2d.ui.List$ListStyle: {
    framed: {
        font: default-font,
        fontColorSelected: black,
        fontColorUnselected: color_ghost,
        selection: selection,
        background: frame_light,
    },
    default: {
        font: default-font,
        fontColorSelected: white,
        fontColorUnselected: color_ghost,
        selection: selection,
    },
},

com.badlogic.gdx.scenes.scene2d.ui.ProgressBar$ProgressBarStyle: {
	default-horizontal: { background: slidegutter_horz, knobBefore: knob_slider_horz },
