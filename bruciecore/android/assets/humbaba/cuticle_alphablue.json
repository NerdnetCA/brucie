        down: button_round_down,
        up: button_round_up,
        disabled: button_round_disabled

    },

    toggle: {
        up: button_toggle_up,
        down: button_toggle_down,
        checked: button_toggle_checked,
        disabled: button_toggle_disabled

    }
},

